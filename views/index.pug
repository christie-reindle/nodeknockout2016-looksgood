doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Word Garden | 2016 Node Knockout
    link(href='/css/styles.css', rel='stylesheet')
  body
    div.container
      div.artwork-container
          div.cloudOne
          div.cloudTwo
          div.cloudThree
          div.ground
      div.word-container
        div#output
          progress(id="health" value="22" max="100")
          form(id="hangman")
            input(type="text" maxlength="1" minlength="1" name="letter" id="letter" placeholder="Guess a letter")
            input(id="guess" name="guess" type="submit" value="Guess")
            button(id="restart" name="restart" type="button") Restart
          ul(id="letters")
          p(id="man")
          p(id="output" class="output")
        div#health
        div#alphabets
        div.dropdown
          select(id="categories")
            option(value="") Select a category
            option(value="plants") Plants
            option(value="zombies") Zombies
            input(type='submit' value='Submit')
    script(src='/hangman.js')
