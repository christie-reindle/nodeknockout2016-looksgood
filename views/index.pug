doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title 2016 Node Knockout
    link(href='/css/styles.css', rel='stylesheet')
  body
    div.container
      div.artwork-container
          div.cloudOne
          div.cloudTwo
          div.cloudThree
      div.game-container
        progress(id="health" value="22" max="100")
        form(id="hangman")
          input(type="text" maxlength="1" minlength="1" name="letter" id="letter" placeholder="Guess a letter")
          input(id="guess" name="guess" type="submit" value="Guess")
          button(id="restart" name="restart" type="button") Restart
        ul(id="letters")
        p(id="man")
        p(id="output" class="output")
        div#output
        div#health
        div#alphabets
        div.dropdown
          select(id="categories")
            option(value="") Select a category
            option(value="plants") Plants
            option(value="zombies") Zombies
            input(type='submit' value='Submit')
          div.flowerWrapper
            div.flowerContainer
              div.petal
              div.petal
              div.petal
              div.petal
              div.petal
            div.core
          div.groundContainer
            div.grass
            div.ground
    script(src='/hangman.js')
    script(src="https://code.jquery.com/jquery-2.2.4.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquerykeyframes/0.0.9/jquery.keyframes.min.js")